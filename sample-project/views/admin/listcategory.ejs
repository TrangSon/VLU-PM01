<html>
  <head>
    <title>LIST CATEGORY</title>
  </head>
  <body>
    <h1>LIST CATEGORY</h1>
    <a href='addcategory'>ADD NEW</a>
    <br/><br/>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Action</th>
      </tr>
      <% for (var cat of cates) { %>
        <tr>
          <td><%= cat._id%></td>
          <td><%= cat.name%></td>
          <td><a href='deletecategory?id=<%= cat._id%>'>Delete</a></td>
        </tr>
      <% } %>
    </table>
  </body>
</html>